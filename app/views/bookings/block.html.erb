<div class="container" data-controller="flatpickr">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="d-flex align-items-center mt48">
        <%= link_to '<i class="fa-solid fa-arrow-left back-button-small mr24"></i>'.html_safe, :back %>
        <p class="header-admin mt48 mb48">Wanneer wil je de camper blokkeren?</p>
      </div>
      <%= simple_form_for @booking, url: block_dates_path, method: :post do |f| %>
        <div class="d-flex justify-content-between align-items-center">
          <%= f.input :startdatum, as: :string, input_html: {data: { flatpickr_target: "startdatum" }, class: "input-field shared-input"} %>
          <%= f.input :einddatum, as: :string, input_html: {data: { flatpickr_target: "einddatum" }, class: "input-field shared-input"} %>
        </div>
        <div class="mt48">
          <%= f.submit "Blokkeren", class: "btn-main btn-form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
