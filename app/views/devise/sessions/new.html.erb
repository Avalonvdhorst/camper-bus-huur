<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center my-5">Inloggen</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs my-5">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: "Wachtwoord",
                      input_html: { autocomplete: "current-password", class: "mb-4" },
                      wrapper_html: {class: "mt-4"} %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.submit "Inloggen", class: "btn-main btn-form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
